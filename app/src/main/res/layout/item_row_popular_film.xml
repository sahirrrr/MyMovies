<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FAFAFA">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_poster_film"
        android:layout_width="173dp"
        android:layout_height="223dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:riv_corner_radius="12dp"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_title_film"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="2"
        android:fontFamily="@font/prompt_bold"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        tools:text="@string/title"
        app:layout_constraintTop_toBottomOf="@id/img_poster_film"
        app:layout_constraintBottom_toTopOf="@id/tv_item_release_date_film"
        app:layout_constraintEnd_toEndOf="@id/img_poster_film"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_item_release_date_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/prompt_regular"
        android:textColor="#6B6B6B"
        android:textSize="12sp"
        tools:text="@string/release_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_title_film" />

    <ImageView
        android:id="@+id/icon_popularity"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toStartOf="@id/tv_item_vote_film"
        app:layout_constraintTop_toBottomOf="@id/tv_item_title_film"
        android:contentDescription="@string/icon_popularity" />

    <TextView
        android:id="@+id/tv_item_vote_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/prompt_regular"
        android:textColor="#6B6B6B"
        android:textSize="12sp"
        tools:text="@string/vote"
        app:layout_constraintEnd_toEndOf="@id/img_poster_film"
        app:layout_constraintTop_toBottomOf="@id/tv_item_title_film"/>

</androidx.constraintlayout.widget.ConstraintLayout>
