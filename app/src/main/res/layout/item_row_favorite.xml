<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FAFAFA">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_poster_film"
        android:layout_width="173dp"
        android:layout_height="223dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:riv_corner_radius="12dp"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_title_film"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:maxLines="2"
        android:fontFamily="@font/prompt_bold"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:text="@string/title"
        app:layout_constraintBottom_toBottomOf="@id/img_poster_film"
        app:layout_constraintEnd_toEndOf="@id/img_poster_film"
        app:layout_constraintStart_toStartOf="@id/img_poster_film" />

</androidx.constraintlayout.widget.ConstraintLayout>